{% extends 'base.html.twig' %}

{% block body %}
    <h1>plat</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plat.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ plat.libelle }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ plat.note }}</td>
            </tr>
            <tr>
                <th>Annotations</th>
                <td>{{ plat.annotations }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('plat_index') }}">Back to the list</a>
