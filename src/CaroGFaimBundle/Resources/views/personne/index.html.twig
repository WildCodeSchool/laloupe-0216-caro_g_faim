{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mes amis</h1>

    <button class="marg">
        <a href="{{ path('personne_new') }}">Ajouter un(e) nouvel(le) ami(e)</a>
    </button>

    <div class="column-list">
        {% for personne in personnes %}
            <span>
                <a href="{{ path('personne_show', { 'id': personne.id }) }}">{{ personne.nom }} {{ personne.prenom }}</a>
            </span>
            <span>
                 <button>
                    <a href="{{ path('personne_edit', { 'id': personne.id }) }}">modif.</a>&nbsp;
                </button>
                <button>
                    <a href="{{ path('personne_delete', { 'id': personne.id }) }}">suppr.</a>
                </button>
                <br>
            </span>
        {% endfor %}
    </div>

{% endblock %}
