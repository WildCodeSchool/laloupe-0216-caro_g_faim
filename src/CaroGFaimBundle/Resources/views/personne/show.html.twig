{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ personne.nom }} {{ personne.prenom }}</h1>
    <form method="get" action="{{ path('personne_index') }}">
        <button class="marg" type="submit">Retour Ã  la liste</button>
    </form>
   <div class="show-table">
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Prenom</th>
            <th>N'aime pas</th>

        </tr>
        </thead>
        <tbody>

        <tr>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.prenom }}</td>
                <td>
                    {% if personne.exclureingredients.count > 0 %}
                        <ul>
                            {% for ingredient in personne.exclureingredients %}
                                <li>{{ ingredient }}</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        Aime tout !
                    {% endif %}
                </td>
            </tr>
            <tr>
            <td colspan="3">
                <form method="get" action="{{ path('personne_edit', { 'id': personne.id }) }}">
                    <button type="submit">modif.</button>
                </form>
                <form method="delete" action="{{ path('personne_delete', { 'id': personne.id }) }}">
                    <button type="submit">suppr.</button>
                </form>

            </td>
            </tr>
        </tbody>
    </table>
    </div>

{% endblock %}
